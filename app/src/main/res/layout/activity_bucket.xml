<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/clMain"
        android:background="#5A5A5A">

    <TextView
            android:layout_width="346dp"
            android:layout_height="53dp"
            android:id="@+id/productsUserEmailBacket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintVertical_bias="0.044"
            android:textSize="24sp"
            tools:text="text" />

    <Button
            android:text="BACK"
            android:layout_width="408dp"
            android:layout_height="70dp"
            android:id="@+id/log_out"
            app:layout_constraintTop_toBottomOf="@+id/productsUserEmailBacket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintVertical_bias="1.0"
            android:onClick="onProductLogOut" />

    <ListView
            android:layout_width="370dp"
            android:layout_height="450dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/productListBucket"
            app:layout_constraintBottom_toTopOf="@+id/log_out"
            app:layout_constraintTop_toBottomOf="@+id/productsUserEmailBacket" />

    <TextView
            android:text="Bucket"
            android:layout_width="369dp"
            android:layout_height="54dp"
            android:id="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/productsUserEmailBacket"
            app:layout_constraintBottom_toTopOf="@+id/productListBucket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="34sp" />

    <TextView
            android:layout_width="361dp"
            android:layout_height="61dp"
            android:id="@+id/totalPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productListBucket"
            app:layout_constraintBottom_toTopOf="@+id/log_out" />

</android.support.constraint.ConstraintLayout>
