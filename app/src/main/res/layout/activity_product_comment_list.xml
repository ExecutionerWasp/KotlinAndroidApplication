<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/clMain"
        android:background="#5A5A5A">

    <Button
            android:text="BACK"
            android:layout_width="414dp"
            android:layout_height="58dp"
            android:id="@+id/start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            android:onClick="onBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    <Button
            android:text="ADD COMMENT"
            android:layout_width="414dp"
            android:layout_height="58dp"
            android:id="@+id/start4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:onClick="onAddComment"
            app:layout_constraintBottom_toTopOf="@+id/start"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/productComments" />

    <TextView
            android:text="Comment"
            android:layout_width="325dp"
            android:layout_height="44dp"
            android:id="@+id/productComment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" />

    <ListView
            android:layout_width="325dp"
            android:layout_height="526dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productComment"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/productComments" />

</android.support.constraint.ConstraintLayout>
